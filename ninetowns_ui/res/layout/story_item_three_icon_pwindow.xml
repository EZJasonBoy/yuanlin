<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">
    <ImageView
    android:id="@+id/story_item_up_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:src="@drawable/icon_ui_item_up_arrow"/>
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_story_item_three_icon">
    
        <LinearLayout
        android:id="@+id/story_item_three_icon_one_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_story_pwin_zoom"/>
        </LinearLayout>
        <View
        android:layout_width="0.01dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"/>
        <LinearLayout
        android:id="@+id/story_item_three_icon_two_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_story_pwin_cut"/>
        </LinearLayout>
        <View
        android:layout_width="0.01dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"/>
        <LinearLayout
        android:id="@+id/story_item_three_icon_three_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_story_pwin_delete"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
    android:id="@+id/story_item_down_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/icon_ui_item_down_arrow"/>

</LinearLayout>
