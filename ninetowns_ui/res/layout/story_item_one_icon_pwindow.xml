<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/story_item_one"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">
    <ImageView
    android:id="@+id/story_item_up_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:src="@drawable/icon_ui_item_up_arrow"/>
    
    <LinearLayout
    android:id="@+id/story_item_one_icon_one_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_story_item_one_icon"
    android:gravity="center">
        <ImageView
            android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_story_pwin_delete"/>
        
    </LinearLayout>
    <ImageView
    android:id="@+id/story_item_down_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/icon_ui_item_down_arrow"/>

</LinearLayout>
