<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <CheckedTextView
            style="@style/TvStyleDefault"
            android:text="@string/name_user"
            android:textColor="@color/text_black"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/h3" />

        <CheckedTextView
            android:id="@+id/ct_name"
            style="@style/TvStyleDefault"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/action_button_margin"
        android:orientation="horizontal" >

        <CheckedTextView
            style="@style/TvStyleDefault"
            android:text="@string/mobile_phone"
            android:textColor="@color/text_black"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/h3" />

        <CheckedTextView
            android:id="@+id/ct_phone"
            style="@style/TvStyleDefault"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/action_button_margin"
        android:orientation="horizontal" >

        <CheckedTextView
            style="@style/TvStyleDefault"
            android:text="@string/num_count"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />

        <CheckedTextView
            android:id="@+id/ct_count"
            style="@style/TvStyleDefault"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />
    </LinearLayout>

</LinearLayout>