<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/titlebar_ll"
    android:layout_height="@dimen/title_bar_height"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_rootlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_title_shape_drawable"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/two_or_one_btn_head_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_or_one_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_return_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/two_or_one_btn_head_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/h1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/two_or_one_btn_head_second_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_or_one_btn_head_second_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/two_or_one_btn_head_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>