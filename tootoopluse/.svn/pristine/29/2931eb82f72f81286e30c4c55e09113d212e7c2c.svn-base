<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_menu_small"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/popmore_iv_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_rec_create_recorde" />

    <ImageView
        android:id="@+id/popmore_iv_picture"
        android:layout_width="wrap_content"
        android:layout_below="@id/popmore_iv_video"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_rec_create_pic" />

</RelativeLayout>