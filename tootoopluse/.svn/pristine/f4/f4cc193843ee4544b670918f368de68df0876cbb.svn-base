<com.ninetowns.ui.widget.HeightChangedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <include layout="@layout/home_tab_titlebar" />

    <com.ninetowns.ui.widget.refreshable.RefreshableListView
        android:id="@+id/gl_rember"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/rember_bottom"
        android:layout_marginTop="@dimen/title_bar_height"
        android:gravity="center"
        android:padding="5dp"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/gl_rember"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center" >

        <com.ninetowns.ui.widget.listview.multicolumn.HorizontalListView
            android:id="@+id/et_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_gray_image"
            android:divider="@android:drawable/divider_horizontal_dim_dark"
            android:hint="@string/enter_num"
            android:paddingLeft="5dp" />

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/et_left"
            android:layout_marginTop="@dimen/line_space_height"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_rem_info"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/tv_comit"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_org_btn"
                android:gravity="center"
                android:text="@string/shiyong"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h2" />
        </LinearLayout>
    </RelativeLayout>

</com.ninetowns.ui.widget.HeightChangedLayout>