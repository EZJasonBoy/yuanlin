<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
    <LinearLayout
    android:id="@+id/address_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            	
                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/address_item_real_name"
                android:textSize="@dimen/h3"/>
                <TextView
               	android:id="@+id/address_item_name"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="张三"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/h3"/>
            </LinearLayout>
            
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/address_item_phone_num"
                android:textSize="@dimen/h3"/>
                <TextView
                android:id="@+id/address_item_phone_num"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="13645788329"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/h3"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/address_item_details"
                android:textSize="@dimen/h3"/>
                <TextView
                android:id="@+id/address_item_details"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区东体东路20号百富大厦22层"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/h3"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/address_item_post_code"
                android:textSize="@dimen/h3"/>
                <TextView
                android:id="@+id/address_item_post_code"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="110025"
                android:singleLine="true"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/h3"/>
            </LinearLayout>
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>
