<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
    <LinearLayout
    android:id="@+id/address_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            	
              
                <TextView
               	android:id="@+id/address_item_name"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                style="@style/TvStyleDefault"
                android:layout_height="wrap_content"
                android:text="张三"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/h2"/>
                <CheckedTextView
                android:id="@+id/address_item_phone_num"
                android:layout_width="0dp"
                 style="@style/TvStyleDefault"
                android:layout_weight="3.5"
                 android:paddingTop="7dp"
                android:paddingBottom="7dp"
                 android:gravity="right|center_vertical"
                android:layout_height="wrap_content"
                android:text="13645788329"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/h2"/>
            </LinearLayout>
            
          
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
              
                <TextView
                android:id="@+id/address_item_details"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                 android:gravity="left|center_vertical"
                style="@style/TvStyleDefault"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/button_horizontal_margin"
                android:text="北京市朝阳区东体东路20号百富大厦22层"
                android:textColor="@color/text_black"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/h3"/>
            </LinearLayout>
           
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>
