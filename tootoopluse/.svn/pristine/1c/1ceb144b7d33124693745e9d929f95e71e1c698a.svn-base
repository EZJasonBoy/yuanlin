<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/address_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/address_item_name"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:textSize="@dimen/h2" />

                <CheckedTextView
                    android:id="@+id/address_item_phone_num"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/button_horizontal_margin"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="7dp"
                    android:textSize="@dimen/h2" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/address_item_details"
                    style="@style/TvStyleDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="3.5"
                    android:gravity="left|center_vertical"
                    android:lineSpacingExtra="@dimen/button_horizontal_margin"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/h3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>