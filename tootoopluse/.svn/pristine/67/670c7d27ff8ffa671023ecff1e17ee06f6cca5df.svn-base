<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_photo_list"
        android:layout_width="@dimen/headphoto_width"
        android:layout_height="@dimen/headphoto_heighth"
        android:layout_marginLeft="@dimen/dot_marginringh"
        android:src="@drawable/icon_default_photo" />

    <ImageView
        android:id="@+id/iv_yes_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_photo_list"
        android:layout_alignRight="@id/iv_photo_list"
        android:src="@drawable/icon_yes_group" />

    <CheckedTextView
        android:id="@+id/ct_user_info"
        style="@style/TvStyleDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo_list"
        android:layout_marginLeft="@dimen/group_boss_leader"
        android:layout_marginTop="@dimen/button_horizontal_margin"
        android:drawablePadding="@dimen/button_horizontal_margin"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="@dimen/h3" />

    <CheckedTextView
        android:id="@+id/ct_group_count"
        style="@style/TvStyleDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct_user_info"
        android:layout_marginLeft="@dimen/padding_to_frame"
        android:layout_marginTop="@dimen/button_horizontal_margin"
        android:background="@drawable/icon_group_count_background"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="@dimen/h3" />

</RelativeLayout>