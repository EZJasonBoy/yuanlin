<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dragAndDrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_white_page_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bg"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_return_gray" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TvStyleDefault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/edi_text"
            android:textSize="@dimen/h1" />

        <ImageView
            android:id="@+id/iv_keep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_keep" />
    </RelativeLayout>

    <include
        android:id="@+id/ic_create_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/create_wish_base_fragment_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fotter_tab_height"
        android:layout_marginTop="@dimen/title_bar_height" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/conver_view" />

                <com.ninetowns.ui.cooldraganddrop.CoolDragAndDropGridView
                    android:id="@+id/coolDragAndDropGridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    dragAndDrop:itemMargin="5dp"
                    dragAndDrop:numColumns="2" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_white_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@android:color/white"
                android:visibility="gone" >

                <com.ninetowns.ui.widget.text.MyEditText
                    android:id="@+id/et_white_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/lineSpacingExtraTextDrop"
                    android:textSize="@dimen/h2" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/ic_create_fotter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/create_wish_base_fragment_fotter" />

</RelativeLayout>