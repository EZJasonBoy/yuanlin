<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_detail_title" />

  

    <LinearLayout
        android:id="@+id/ll_activity_detail"
        android:layout_width="match_parent"
        style="@style/FotterStyle"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/ct_collect"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_collect2"
                android:textColor="@color/btn_gray_color"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/ct_chat"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_talk2"
                android:text="群聊"
                android:textColor="@color/btn_gray_color"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
           

            <CheckedTextView
                android:id="@+id/ct_gotobuy"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_buy2"
                android:text="@string/gotobuy"
                android:textColor="@color/btn_gray_color"
                android:textSize="@dimen/h4" />
        </LinearLayout>
    </LinearLayout>
      <android.support.v4.view.ViewPager
        android:id="@+id/act_det_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@id/ll_activity_detail">
    </android.support.v4.view.ViewPager>
    <View 
        android:layout_alignTop="@id/ll_activity_detail"
        style="@style/LineStyle"/>
	
    <LinearLayout
        android:id="@+id/ll_comment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_activity_detail"
        android:background="@color/white"
        android:orientation="vertical" >

        <View
            android:id="@+id/v_line"
            style="@style/LineStyle"
            android:visibility="gone"
            android:layout_width="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_group_sub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="参与组团"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/tv_count_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_toRightOf="@id/tv_title"
                android:text="( 报名人数:"
                android:textSize="@dimen/h4" />

            <TextView
                android:id="@+id/tv_count"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_count_title"
                android:text="120)"
                android:textSize="@dimen/h4" />

            <LinearLayout
                android:id="@+id/ll_group_view"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/icon_applay_row" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_line2"
             style="@style/LineStyle"
            android:layout_width="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_comment_sub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/subtab_height"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="体验点评"
                    android:textSize="@dimen/h2" />

                <TextView
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_horizontal_margin"
                    android:text="("
                    android:textSize="@dimen/h4" />

                <TextView
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_horizontal_margin"
                    android:text="推荐购买指数:"
                    android:textSize="@dimen/h4" />

                <com.ninetowns.ui.widget.WrapRatingBar
                    android:id="@+id/rat_comment_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/button_horizontal_margin"
                    android:clickable="false"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:longClickable="false"
                    android:numStars="5" />

                <TextView
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_horizontal_margin"
                    android:text=")"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_comment_view"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/icon_applay_row" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_online"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/activity_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/activity_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_activity_detail"
        android:layout_below="@id/title"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/photo_group_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fotter_tab_height"
        android:visibility="gone" >
    </FrameLayout>

</RelativeLayout>