<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:id="@+id/ll_dissmiss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:background="@color/white"
        android:orientation="vertical" >
      <RelativeLayout
            android:id="@+id/rl_group_sub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="参与组团"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/tv_count_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_toRightOf="@id/tv_title"
                android:text="( 报名人数:"
                android:textSize="@dimen/h4" />

            <TextView
                android:id="@+id/tv_group_count"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_count_title"
                android:text="120)"
                android:textSize="@dimen/h4" />
            
              <LinearLayout
                   android:id="@+id/ll_group_view"
                android:layout_width="@dimen/subtab_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/icon_arrow_down" />
            </LinearLayout>

           
        </RelativeLayout>

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line" />

        <com.ninetowns.ui.widget.refreshable.RefreshableGridView
            android:id="@+id/gv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="30dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="4"
            android:padding="7dp"
            android:verticalSpacing="2dp" />
    </LinearLayout>

</LinearLayout>