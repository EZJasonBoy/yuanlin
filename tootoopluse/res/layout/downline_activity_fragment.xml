<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halftransparent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:background="@color/white"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_info_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        android:id="@+id/ct_type"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/icon_type"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="类型 :" />

                    <CheckedTextView
                        android:id="@+id/ct_type_name"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="线下组团" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_info_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        android:id="@+id/ct_categray"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/icon_categray"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="分类 :" />

                    <CheckedTextView
                        android:id="@+id/ct_categray_name"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/button_horizontal_margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="25"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <CheckedTextView
                            android:id="@+id/ct_time"
                            style="@style/ActInfoTvStyleDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:drawableLeft="@drawable/icon_time"
                            android:drawablePadding="@dimen/button_horizontal_margin"
                            android:text="时间 :" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <com.ninetowns.ui.widget.text.MarqueeTextView
                            android:id="@+id/ct_sign_start_time"
                            style="@style/RegisterActTimeTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_line" />

                        <com.ninetowns.ui.widget.text.MarqueeTextView
                            android:id="@+id/ct_sign_end_time"
                            style="@style/RegisterActTimeTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_line" />

                        <com.ninetowns.ui.widget.text.MarqueeTextView
                            android:id="@+id/ct_activity_startime"
                            style="@style/RegisterActTimeTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_line" />

                        <com.ninetowns.ui.widget.text.MarqueeTextView
                            android:id="@+id/ct_activity_edntime"
                            style="@style/RegisterActTimeTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/activity_info_item_height"
                        android:layout_weight="25"
                        android:gravity="center_vertical" >

                        <CheckedTextView
                            style="@style/ActInfoTvStyleDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:drawableLeft="@drawable/icon_site"
                            android:drawablePadding="@dimen/button_horizontal_margin"
                            android:text="地点 :" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75" >

                        <CheckedTextView
                            android:id="@+id/ct_location"
                            style="@style/ActInfoTvStyleDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/bmapView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_info_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/icon_business"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="商家 :" />

                    <CheckedTextView
                        android:id="@+id/ct_business"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/button_horizontal_margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_info_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/icon_count"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="人数 :" />

                    <CheckedTextView
                        android:id="@+id/ct_man_count"
                        style="@style/ActInfoTvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/button_horizontal_margin" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_dismiss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical" />

</LinearLayout>