<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
    android:id="@+id/remark_story_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
            android:id="@+id/remark_story_item_top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_item_hight"
            android:weightSum="5"
            android:orientation="horizontal">
                
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal">
                    <!-- 空 -->
                    
                </LinearLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                    <TextView
                    android:id="@+id/remark_story_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"/>
                    
                    <ImageView
                    android:id="@+id/remark_story_item_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_vip_1"/>
                    
                    
                </LinearLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_vip_1"/>
                    
                    <TextView
                    android:id="@+id/remark_story_item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h6"
                    android:text="xihuan"/>
                </LinearLayout>
                
            </LinearLayout>
            <ImageView
            android:id="@+id/remark_story_item_cover"
            android:layout_below="@id/remark_story_item_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
            
            <ImageView
            android:id="@+id/remark_story_item_user_logo"
            android:layout_width="@dimen/tab_item_hight"
            android:layout_height="@dimen/tab_item_hight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_default_photo"/>
            
            <TextView
            android:id="@+id/remark_story_item_story_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/h2"
            android:layout_alignBottom="@id/remark_story_item_cover"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:text="打发打发的萨菲大双份的"/>
        </RelativeLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtab_height"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remark_story_recommd_buy_hint"/>
            
            <com.ninetowns.ui.widget.WrapRatingBar
            android:id="@+id/remark_story_item_ratbar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true"
            android:longClickable="false"
            android:layout_gravity="center_vertical"
            android:numStars="5"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtab_height"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
            
            <TextView
            android:id="@+id/remark_story_item_act_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动标题达到法定分"/>
            
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
