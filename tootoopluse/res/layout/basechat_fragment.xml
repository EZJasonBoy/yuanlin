<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <FrameLayout
        android:id="@+id/chatcativity_getmsghistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查看历史消息 >>"
            android:textColor="#08488e" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >
        <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_voicekeyboardmodel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_iv_voice"
                android:text="语音" />

            <LinearLayout
                android:id="@+id/chatroom_ll_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center" >

                <EditText
                    android:id="@+id/main_edittext_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_edit_bg"
                    android:inputType="none"
                    android:paddingBottom="5dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="13dp"
                    android:paddingTop="5dp"
                    android:text="" />
            </LinearLayout>

            <!--
                 <EditText
                android:id="@+id/main_edittext_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" />
            -->

            <LinearLayout
                android:id="@+id/chatroom_tv_presstospeak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/presstospeak_bg"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/tv_pushtotalk"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_more_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_iv_add" />

            <Button
                android:id="@+id/chatroom_btn_send"
               android:layout_width="42dp"
                android:layout_height="32dp"
                 android:background="@drawable/chat_send_btn_selector"
                 android:textColor="#666666"
                android:textSize="16sp"
                android:text="@string/send"
                android:visibility="gone" />
        </LinearLayout>

       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recording_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/mic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/record_animation_01" />

        <TextView
            android:id="@+id/recording_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="25dp"
            android:padding="2dp"
            android:textColor="@color/white"
            android:text="@string/move_up_to_cancel"
            android:textSize="10sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/main_listview_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@id/chatcativity_getmsghistory"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbarStyle="outsideOverlay"
        android:stackFromBottom="true"
        android:transcriptMode="normal" >
    </ListView>
    
    <LinearLayout
        android:id="@+id/selectedpicture_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="260dip"
       android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+id/photopop_selectfrom_album"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:background="@drawable/account_btn_selector"
            android:gravity="center"
            android:text="从相册中选择" />

        <Button
            android:id="@+id/photopop_selectfrom_camera"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="30dip"
            android:textColor="@color/black"
            android:layout_marginTop="20dip"
            android:background="@drawable/account_btn_selector"
            android:gravity="center"
            android:text="相机拍照" />

        <Button
            android:id="@+id/photopop_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:textColor="@color/black"
            android:background="@drawable/cancel_btn_selector"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>
    
</RelativeLayout>