<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
      style="@style/TitleStyle"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:gravity="center_vertical|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/btn_return_gray" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:gravity="center"
            android:orientation="horizontal"
            >
                
            <RadioGroup
            android:id="@+id/rg_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                 android:id="@+id/rbtn_panding_audit"
                style="@style/HomeTabButtonRecommd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="待审核"
                android:checked="true"
                android:textColor="@drawable/witeorblack_color_secector"
                android:textSize="@dimen/h2" />
             <RadioButton
                 android:id="@+id/rbtn_no_throut"
                style="@style/HomeTabButtonRecommd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="未通过"
                android:textColor="@drawable/witeorblack_color_secector"
                android:textSize="@dimen/h2" />
        </RadioGroup>
        </LinearLayout>

        
    </LinearLayout>
    <FrameLayout 
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>