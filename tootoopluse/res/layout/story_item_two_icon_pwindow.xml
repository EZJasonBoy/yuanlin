<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/story_item_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/story_item_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_ui_item_up_arrow"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_story_item_two_icon"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/story_item_two_icon_one_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_story_pwin_edit" />
        </LinearLayout>

        <View
            android:layout_width="0.01dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/story_item_two_icon_two_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_story_pwin_delete" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/story_item_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_ui_item_down_arrow" />

</LinearLayout>