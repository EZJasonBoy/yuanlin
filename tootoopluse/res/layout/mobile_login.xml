<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    
    <include
    layout="@layout/two_or_one_btn_head"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
        <EditText
        android:id="@+id/mobile_login_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mobile_login_num_hint"
        android:singleLine="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/login_register_left_right_margin"
        android:layout_marginRight="@dimen/login_register_left_right_margin"
        android:background="@drawable/login_mobile_et_drawable"
        android:inputType="phone"
        android:maxLength="12"
        android:textSize="@dimen/h3"/>
        <EditText
        android:id="@+id/mobile_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mobile_login_pwd_hint"
        android:singleLine="true"
        android:password="true"
        android:background="@drawable/login_open_pwd_et_drawable"
        android:layout_marginLeft="@dimen/login_register_left_right_margin"
        android:layout_marginRight="@dimen/login_register_left_right_margin"
        android:layout_marginTop="15dp"
        android:maxLength="17"
        android:textSize="@dimen/h3"/>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="7">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">
                <!-- 空，就是为了上“忘记密码居右” -->
                
            </LinearLayout>
            
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
				<TextView
				android:id="@+id/mobile_login_forget_pwd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/mobile_login_forget_pwd"
				android:textSize="@dimen/h3"/>                
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
    
    <TextView
    android:id="@+id/mobile_login_login_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/btn_mobile_login_btn"
    android:text="@string/login_login"
    android:textColor="@color/white"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="@dimen/login_register_left_right_margin"
    android:layout_marginRight="@dimen/login_register_left_right_margin"
    android:gravity="center"
    android:textSize="@dimen/h3"/>
    
    
</LinearLayout>
