<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:orientation="vertical">
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/tab_item_hight"
	    android:weightSum="3"
	    android:orientation="horizontal">
	        <LinearLayout
	        android:id="@+id/change_rows_title_layout"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:orientation="vertical">
	            <TextView
	            android:id="@+id/act_first_step_item_store"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"/>
		            
	            
	        </LinearLayout>
	        
	        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="2"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	            
	             
	             <RelativeLayout
	             android:layout_width="0dp"
	             android:layout_weight="4"
	             android:layout_height="wrap_content">
	             
		              <TextView
		              android:id="@+id/act_first_step_item_tv"
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:singleLine="true"
		              android:paddingLeft="5dp"
		              android:text="test"/>
		              
		              <!-- android:completionThreshold该属性设置阀值，规定用户打了多少字符之后才出现自动提示，默认值是2 -->
					  <AutoCompleteTextView
					  android:id="@+id/act_first_step_item_auto_tv"
					  android:layout_width="match_parent"
					  android:layout_height="@dimen/create_act_frist_step_story_height"
					  android:background="@drawable/bg_white_corners_shape_drawable"
					  android:textSize="15sp"
					  android:paddingLeft="5dp"
					  android:visibility="gone"
					  android:singleLine="true"/>
	              
	             </RelativeLayout>   
	             
	             <LinearLayout
	             android:id="@+id/act_first_step_item_delete_layout"
	             android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:gravity="center">
	                 
	                 <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/btn_create_act_delete_wish"/>
	             </LinearLayout>
	            
	            
	        </LinearLayout>
	    </LinearLayout>
    
        <com.ninetowns.tootoopluse.helper.ChangeRowsView
	    android:id="@+id/act_first_step_item_change_rows"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
        <LinearLayout 
        android:id="@+id/act_first_step_item_add_wish_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_item_hight"
        android:gravity="center"
        android:orientation="vertical">
	        <LinearLayout
	        android:id="@+id/act_first_step_item_add_wish"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_create_act_add_wish"/>
	            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="@string/create_act_add_wish"/>
	        </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
