<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/actionbar_framelayou"
        style="@style/frame_padding_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="#f8f8f8" >

        <ImageView
            android:id="@+id/setting_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/btn_return_gray" />

        <TextView
            android:id="@+id/commontitlebar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/h1" />

        <ImageView
            android:id="@+id/commontitlebar_iv_groupicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/chat_group_icon"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/frame_padding_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="#f0f0f0"
            android:gravity="center" >

            <TextView
                android:id="@+id/chat_acitivity_tv_groupone"
                style="@style/chat_tabtext_style"
                android:textColor="@color/tab_selected_textcolor" />

            <TextView
                android:id="@+id/chat_acitivity_tv_grouptwo"
                style="@style/chat_tabtext_style"
                android:textColor="@color/tab_unSelected_textcolor" />

            <TextView
                android:id="@+id/chat_acitivity_tv_groupthree"
                style="@style/chat_tabtext_style"
                android:textColor="@color/tab_unSelected_textcolor" />
        </LinearLayout>

        <include layout="@layout/merge_tab_bottom_line" />
    </FrameLayout>

    <com.ninetowns.ui.widget.ScrollControlViewPager
        android:id="@+id/chat_vPager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f6ead2"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>