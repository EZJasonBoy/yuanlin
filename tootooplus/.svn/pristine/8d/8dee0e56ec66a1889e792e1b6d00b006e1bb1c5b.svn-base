<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/act_detail_title"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:baselineAligned="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_activity_detail_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@drawable/btn_return_gray" />

            <ImageView
                android:id="@+id/iv_activity_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@null"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_activity_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dot_margintop"
                android:contentDescription="@string/image_description"
                android:src="@drawable/icon_default_photo"
                android:visibility="gone" />

            <CheckedTextView
                android:id="@+id/ct_uername"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_activity_photo"
                android:text="" />

            <CheckedTextView
                android:id="@+id/ct_activity_date"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ct_uername"
                android:singleLine="true"
                android:layout_toRightOf="@+id/iv_activity_photo"
                android:textColor="@color/text_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30" >

            <ImageView
                android:id="@+id/iv_activity_detail_right_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@drawable/icon_facetoface_group"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_activity_detail_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@id/iv_activity_detail_right_group"
                android:contentDescription="@string/image_description"
                android:src="@drawable/btn_keep"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_face_toface_detail_title"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:baselineAligned="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_activity_face_to_detail_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@drawable/btn_return_gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_title_face"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center" >

            <CheckedTextView
                android:id="@+id/ct_face_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/act_del_group_baichi"
                android:textSize="@dimen/h1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_vertical|right" >
        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineStyle" />

</LinearLayout>