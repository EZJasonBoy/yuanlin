<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/join_mem_top_layout"
        layout="@layout/two_or_one_btn_head" />

    <GridView
        android:id="@+id/join_mem_gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/groupchat_picture_heighth"
        android:layout_marginTop="@dimen/title_bar_height"
        android:gravity="center_horizontal"
        android:horizontalSpacing="15dp"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:verticalSpacing="30dp" />

    <LinearLayout
        android:id="@+id/join_mem_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/join_mem_bottom_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/join_member_join_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/btn_org_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_mem_num_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/join_mem_bottom_height"
        android:layout_above="@id/join_mem_bottom_layout"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/join_member_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/btn_gray_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_youxianma"
        android:layout_width="match_parent"
        android:layout_height="@dimen/groupchat_picture_heighth"
        android:weightSum="100"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true" >
        <LinearLayout 
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:visibility="gone"
        android:gravity="right"
            >
             <ImageView
            android:id="@+id/icon_youxianma"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
            
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="horizontal"
            >
          <CheckedTextView 
              style="@style/TvStyleDefault"
              android:textSize="@dimen/h0"
              android:textColor="@color/btn_org_color"
              android:text="白吃码:"
              />
            <CheckedTextView 
              android:id="@+id/ct_youxianma"
              style="@style/TvStyleDefault"
              android:layout_marginLeft="@dimen/button_horizontal_margin"
              android:text=""
              android:textColor="@color/btn_org_color"
              android:textSize="@dimen/h0"
              />
            
        </LinearLayout>
       
    </LinearLayout>

</RelativeLayout>