<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:background="@color/app_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/remark_story_item_top_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:orientation="horizontal"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="horizontal" >

                    <!-- 空 -->

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical" >

                    <CheckedTextView
                        android:id="@+id/ct_user_name"
                        style="@style/TvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:drawableRight="@drawable/icon_vip_1"
                        android:text="张三"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3" />

                    <CheckedTextView
                        android:id="@+id/ct_like"
                        style="@style/TvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:drawableLeft="@drawable/icon_good"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h4" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remark_story_item_top_layout" >

                <ImageView
                    android:id="@+id/iv_comment_convert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <include layout="@layout/video_play_icon" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_wish_photo_stroke"
                android:layout_width="@dimen/photo_diment_stroke"
                android:layout_height="@dimen/photo_diment_stroke"
                android:layout_marginLeft="@dimen/photo_diment_stroke_maginlef"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/round_white" />

            <ImageView
                android:id="@+id/iv_comment_photo"
                android:layout_width="@dimen/photo_diment"
                android:layout_height="@dimen/photo_diment"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/icon_default_photo" />

            <ImageView
                android:id="@+id/iv_wish_recommend_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/tab_item_hight"
                android:scaleType="centerCrop"
                android:src="@drawable/ico_good" />

            <LinearLayout
                style="@style/Act_Sto_Name_Style"
                android:layout_width="match_parent"
                android:layout_alignBottom="@id/rl_convert"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_story_name"
                    style="@style/TvStyleDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h1" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height_down_line_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:text="@string/remark_story_recommd_buy_hint"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />

            <com.ninetowns.ui.widget.WrapRatingBar
                android:id="@+id/rb_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_act_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height_down_line_half"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/ct_activityname"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>