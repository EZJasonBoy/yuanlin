<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/white"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/groupchatitem_iv_grouppic"
        android:layout_width="@dimen/groupchat_picture_width"
        android:layout_height="@dimen/groupchat_picture_heighth"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/groupchatitem_tv_groupname"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/groupchatitem_iv_grouppic"
        android:layout_toLeftOf="@+id/rightarrow"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="农场 自产有机草莓" />

    <ImageView
        android:id="@+id/rightarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_arrow" />

</RelativeLayout>