<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color" >
    <RelativeLayout
        android:id="@+id/ll_tab_comment"
        android:layout_width="match_parent"
       style="@style/TitleStyle"
       android:background="@color/app_bg_color"
       android:layout_height="@dimen/title_bar_height"
        >

        

        <RadioGroup
            android:id="@+id/rg_tab_act_comment"
            android:layout_width="match_parent"
            style="@style/TitleStyle"
             android:background="@color/app_bg_color"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_act_tab_join"
                style="@style/HomeTabSecondStyle"
                android:text="@string/str_most_join"
               />

            <RadioButton
                android:id="@+id/rb_tab_act_no_comment"
                style="@style/HomeTabSecondStyle"
                android:text="@string/str_most_no_comment"
                android:checked="true"
                 />

            <RadioButton
                android:id="@+id/rb_tab_act_commented"
                style="@style/HomeTabSecondStyle"
                android:text="@string/str_most_commented"
                 />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
             style="@style/LineStyle"
            android:layout_alignParentBottom="true"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:id="@+id/view_line_join"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="67"
                    android:background="@color/btn_org_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:id="@+id/view_line_nocomment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="67"
                    android:background="@color/btn_org_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:id="@+id/view_line_commented"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="67"
                    android:background="@color/btn_org_color" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_free_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>