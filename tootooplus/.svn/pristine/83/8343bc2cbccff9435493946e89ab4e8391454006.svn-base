<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_in"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibtn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/btn_return_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/search_vertical_margin"
            android:layout_marginTop="@dimen/search_vertical_margin"
            android:layout_weight="68"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/tv_title"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/button_horizontal_margin"
                android:textSize="@dimen/h1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibtn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/btn_add_gray" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_width="match_parent" />

</LinearLayout>