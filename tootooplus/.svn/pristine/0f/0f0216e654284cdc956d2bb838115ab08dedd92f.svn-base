<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color" >
    <RelativeLayout
        android:id="@+id/ll_tab_wis"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/app_bg_color"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/gray_line" />

        <RadioGroup
            android:id="@+id/rg_tab_wis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_centerInParent="true"
            android:background="@color/app_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_wis_tab_passed"
                style="@style/HomeTabButtonStyle"
                android:checked="true"
                android:text="已通过"
                android:textColor="@drawable/text_black_color_secector" />

            <RadioButton
                android:id="@+id/rb_tab_wis_no_passed"
                style="@style/HomeTabButtonStyle"
                android:text="未通过"
                android:textColor="@drawable/text_black_color_secector" />

           
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:id="@+id/view_line_passed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="67"
                    android:background="@color/btn_org_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:id="@+id/view_line_nopassed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                     android:layout_weight="67"
                    android:background="@color/btn_org_color" />
            </LinearLayout>
 
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_free_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>