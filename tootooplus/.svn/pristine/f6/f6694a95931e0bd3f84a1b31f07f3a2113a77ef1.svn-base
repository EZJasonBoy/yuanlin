<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/app_bg_color"
android:orientation="vertical">

    <include
    layout="@layout/two_or_one_btn_head"/>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/person_center_first_line_height"
    android:layout_marginTop="15dp"
    android:background="@drawable/bg_white_shape_drawable"
    android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:gravity="center_vertical"
        android:orientation="horizontal">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_phone"/>
                
            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                <EditText
                android:id="@+id/login_phone_num_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_et_height"
                android:singleLine="true"
                android:background="@color/white"
                android:inputType="phone"
                android:hint="@string/login_phone_num_et_hint"/>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                <!-- ç©º -->
            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/title_hor_line"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:gravity="center_vertical"
        android:orientation="horizontal">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_pwd"/>
                
            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                <EditText
                android:id="@+id/login_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_et_height"
                android:singleLine="true"
                android:background="@color/white"
                android:hint="@string/login_pwd_et_hint"/>
            </LinearLayout>
            <LinearLayout
            android:id="@+id/login_pwd_eye_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                <ImageView
                android:id="@+id/login_pwd_eye_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_eye_close"/>
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_details_bottom_layout_height"
    android:orientation="horizontal">
        
        <LinearLayout
        android:id="@+id/login_phone_register_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
            <TextView
            android:id="@+id/login_phone_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_phone_register"/>
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal">
            
        </LinearLayout>
        
        
        <LinearLayout
        android:id="@+id/login_forget_pwd_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
            <TextView
            android:id="@+id/login_forget_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mobile_login_forget_pwd"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <TextView
    android:id="@+id/login_mobile_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:text="@string/login_login"
    android:layout_marginLeft="@dimen/mobile_login_btn_left_right_margin"
    android:layout_marginRight="@dimen/mobile_login_btn_left_right_margin"
    android:textSize="@dimen/h2"
    android:background="@drawable/btn_mobile_login_bg"
    android:textColor="@color/white"/>
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_album_pic_width_height">
        
            
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_login_left"
            android:layout_centerVertical="true"/>
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h1"
            android:layout_centerInParent="true"
            android:text="@string/login_third_login_hint"/>
            
        
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/line_login_right"/>
            
    </RelativeLayout>

     <LinearLayout
     android:id="@+id/login_wechat_login_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/btn_other_login_bg"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:gravity="center"
     android:orientation="horizontal">
         <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/icon_other_wechat"/>
         <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textSize="@dimen/h2"
         android:text="@string/login_wechat_login"/>
     </LinearLayout>
     
</LinearLayout>
