<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
android:orientation="vertical">
	
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
    	android:id="@+id/first_guide_viewPager"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
        
        <LinearLayout
        android:id="@+id/first_guide_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_guide_bottom_layout_height"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
            
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
                <!-- 空 -->
            </LinearLayout>
            <LinearLayout
            android:id="@+id/first_guide_register_layout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_guide_register_now"
                android:textColor="@color/white"/>
            </LinearLayout>
            <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white"/>
            <LinearLayout
            android:id="@+id/first_guide_look_layout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_guide_service"
                android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
                <!-- 空 -->
            </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
        android:id="@+id/first_guide_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/first_guide_bottom_layout"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
            
            <LinearLayout
	        android:id="@+id/first_guide_wechat_login_layout"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/btn_guide_wechat_login_bg"
	        android:layout_marginLeft="@dimen/guide_login_btn_left_margin"
	        android:layout_marginRight="@dimen/guide_login_btn_right_margin"
	        android:gravity="center"
	        android:orientation="horizontal">
	            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_guide_wx"/>
	            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:textSize="@dimen/h2"
	            android:textColor="@color/white"
	            android:text="@string/login_wechat_login"/>
	        </LinearLayout>
            
            <LinearLayout
	        android:id="@+id/first_guide_mobile_login_layout"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/btn_guide_mobile_login_bg"
	        android:layout_marginLeft="@dimen/guide_login_btn_right_margin"
	        android:layout_marginRight="@dimen/guide_login_btn_left_margin"
	        android:gravity="center"
	        android:orientation="horizontal">
	            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_guide_mobile"/>
	            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:textSize="@dimen/h2"
	            android:textColor="@color/title_textcolor"
	            android:text="@string/mobile_login_title"/>
	        </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_above="@id/first_guide_login_layout"
  		android:layout_marginBottom="10dp"
  		android:gravity="center">
  		    <ImageView
  		    android:id="@+id/first_guide_mark_one"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/icon_dot_gray"
		    />
  		    
  		    <ImageView
  		    android:id="@+id/first_guide_mark_two"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/icon_dot_gray"
		    />
  		    <ImageView
  		    android:id="@+id/first_guide_mark_three"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/icon_dot_gray"
		    />
  		    
  		    <ImageView
  		    android:id="@+id/first_guide_mark_four"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/icon_dot_gray"
		    />
  		    
  		    <ImageView
  		    android:id="@+id/first_guide_mark_five"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/icon_dot_gray"
		    />
		    
  		</LinearLayout>
        
    </RelativeLayout>
</LinearLayout>
