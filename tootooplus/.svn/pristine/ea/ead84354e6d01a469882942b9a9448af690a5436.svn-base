<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckedTextView
            android:id="@+id/ct_collect"
            style="@style/TvStyleDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_collect2"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckedTextView
            android:id="@+id/ct_chat"
            style="@style/TvStyleDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_talk2"
            android:text="群聊"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckedTextView
            android:id="@+id/ct_gotobuy"
            style="@style/TvStyleDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_buy2"
            android:text="去购买"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h2" />
    </LinearLayout>

</LinearLayout>