<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:baselineAligned="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_activity_detail_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@drawable/btn_return_gray" />

            <ImageView
                android:id="@+id/iv_activity_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                android:src="@null" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:visibility="gone"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_activity_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dot_margintop"
                android:contentDescription="@string/image_description"
                 android:visibility="gone"
                android:src="@drawable/icon_default_photo" />

            <CheckedTextView
                android:id="@+id/ct_uername"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_activity_photo"
                android:text="" />

            <CheckedTextView
                android:id="@+id/ct_activity_date"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ct_uername"
                android:layout_toRightOf="@+id/iv_activity_photo"
                android:text=""
                android:textColor="@color/text_black" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_vertical|right" >

            <ImageView
                android:id="@+id/iv_activity_detail_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/image_description"
                 android:visibility="gone"
                android:src="@drawable/btn_keep" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineStyle" />

</LinearLayout>