<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/app_bg_color"
android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        
        <LinearLayout
        android:id="@+id/per_home_letter_fol_state_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/white"
        android:orientation="horizontal">
            
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
                
                <LinearLayout
                android:id="@+id/per_home_head_letter_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_per_home_follow"
                android:orientation="horizontal">
        	        
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_per_home_private_letter"/>
                    <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="@string/per_home_private_letter"/>
                    
                </LinearLayout>
                
                
            </LinearLayout>
            
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
                
                <LinearLayout
                android:id="@+id/per_home_head_follow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/btn_per_home_follow"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                    
                    <ImageView
                    android:id="@+id/per_home_head_fol_state_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_per_home_add_follow"/>
                    <TextView
                    android:id="@+id/per_home_head_follow_state"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="关注"/>
                    
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/tab_item_hight"
	    android:orientation="horizontal">
        
	        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.8"
	        android:orientation="horizontal">
	            
	            <!-- 空 -->
	            
	        </LinearLayout>
	        
	        <RelativeLayout
	       	android:id="@+id/head_view_two_act_layout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1.2"
	        android:orientation="horizontal">
	            
	            <TextView
	            android:id="@+id/head_view_two_act_or_story"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/per_home_act_hint"
	            android:layout_centerInParent="true"
	            android:gravity="center"/>
	            
	            
	            <View
	            android:id="@+id/head_view_two_act_story_view"
	            android:layout_width="match_parent"
	            android:layout_height="2dp"
	            android:background="@color/btn_org_color"
	            android:layout_alignParentBottom="true"/>
	            
	        </RelativeLayout>
	        
	        <RelativeLayout
	        android:id="@+id/head_view_two_store_wish_layout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1.2"
	        android:orientation="horizontal">
	            
	            <TextView
	            android:id="@+id/head_view_two_store_or_custom_wish"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/per_home_store_wish_hint"
	            android:layout_centerInParent="true"
	            android:gravity="center"/>
	            
	            
	            <View
	            android:id="@+id/head_view_two_store_or_custom_wish_view"
	            android:layout_width="match_parent"
	            android:layout_height="2dp"
	            android:background="@color/btn_org_color"
	            android:visibility="gone"
	            android:layout_alignParentBottom="true"/>
	            
	        </RelativeLayout>
	        
	        
	        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.8"
	        android:orientation="horizontal">
	             <!-- 空 -->
	        </LinearLayout>
	        
	        
	    </LinearLayout>
	    
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_hor_line"/>
	
        
    </LinearLayout>

</LinearLayout>
