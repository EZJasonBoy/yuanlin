<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
     >

    <ImageView
        android:id="@+id/notused_icon_priortycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_prioritycode" />

    <TextView
        android:id="@+id/notused_prioritycode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bb2b2b"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/notused_icon_priortycode"
        android:text="45454" />

    <Button
        android:id="@+id/notused_btn_present"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:textColor="#8f8f8f"
        android:background="@drawable/presented_btn_bg_f"
        android:layout_centerVertical="true"
        android:text="赠送" />

</RelativeLayout>