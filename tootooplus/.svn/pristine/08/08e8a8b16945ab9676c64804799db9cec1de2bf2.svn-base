<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_item_hight"
    android:orientation="vertical">
    	<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_hor_line"
        android:visibility="invisible"
        />
         
         <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal">
             
             
             <LinearLayout
             android:id="@+id/change_rows_cont_down_layout"
             android:layout_width="0dp"
             android:layout_height="@dimen/create_act_frist_step_story_height"
             android:layout_weight="4"
             android:gravity="center_vertical"
             android:background="@drawable/bg_white_corners_shape_drawable"
             android:orientation="horizontal">
             	  <RelativeLayout
             	  android:layout_width="0dp"
             	  android:layout_weight="3"
             	  android:paddingLeft="10dp"
             	  android:layout_height="wrap_content">
             	      
             	      <TextView
		              android:id="@+id/change_rows_cont_tv"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:text="test"/>
             	      
             	      <TextView
		              android:id="@+id/change_rows_cont_story_id"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:visibility="gone"/>
             	  </RelativeLayout>
             
	             
	              
	              <LinearLayout
	              android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="wrap_content"
	              android:gravity="center">
	                  
	                  <ImageView
	                  android:id="@+id/change_rows_cont_view_arrow"
	                  android:layout_width="wrap_content"
	                  android:layout_height="wrap_content"
	                  android:src="@drawable/icon_arrow_down"/>
	              </LinearLayout>
             </LinearLayout>   
             
             <LinearLayout
             android:id="@+id/change_rows_cont_delete_layout"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center">
                 
                 <ImageView
                 android:id="@+id/change_rows_cont_delete_iv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/btn_create_act_delete_wish"/>
             </LinearLayout>
         </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
     android:layout_marginBottom="10dp"
    android:orientation="horizontal">
        
        <ImageView
        android:id="@+id/change_rows_count_story_cover"
        android:layout_width="@dimen/video_msg_width"
        android:layout_height="@dimen/video_msg_width"
        android:src="@drawable/video_default_img"/>
    </LinearLayout>

</LinearLayout>
