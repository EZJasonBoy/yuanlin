<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/com.ninetowns.tootooplus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.ninetowns.ui.widget.refreshable.RefreshableListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh_home_page_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:divider="@null"
        android:horizontalSpacing="2dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        ptr:ptrMode="both" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/title_in"
            style="@style/TitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:orientation="horizontal"
                android:weightSum="100" >

                <LinearLayout
                    android:id="@+id/ll_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/ibtn_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:src="@drawable/btn_return_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_middle"
                    style="@style/SearchBgStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="68"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        android:id="@+id/ct_wish_search"
                        style="@style/SearchTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/ibtn_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:src="@drawable/btn_add_gray"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/LineStyle" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_arcmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" >

            <com.ninetowns.tootooplus.helper.ArcMenu
                android:id="@+id/arc_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                zhy:position_att="right_top"
                zhy:radius_att="130dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/id_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/btn_add_gray" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_create_act_internet"
                    android:tag="internet" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_create_act_camera"
                    android:tag="camera" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_create_act_photo"
                    android:tag="photo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_create_act_video"
                    android:tag="video" />
            </com.ninetowns.tootooplus.helper.ArcMenu>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>