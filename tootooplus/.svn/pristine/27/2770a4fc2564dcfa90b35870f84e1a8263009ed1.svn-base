<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <LinearLayout
        android:id="@+id/ll_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/halftransparent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@drawable/icon_selected_row" />

        <LinearLayout
            android:id="@+id/ll_add_group"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:background="@drawable/round_white_backgroud"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height" >

                <ImageView
                    android:id="@+id/iv_icon_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_all_selected" />

                <CheckedTextView
                    android:id="@+id/ct_all"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:text="全部"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/h4" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_line"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:id="@+id/rl_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height" >

                <ImageView
                    android:id="@+id/iv_icon_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_new" />

                <CheckedTextView
                    android:id="@+id/ct_new"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:text="最新"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/h4" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_line"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:id="@+id/rl_hot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height" >

                <ImageView
                    android:id="@+id/iv_icon_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_hot" />

                <CheckedTextView
                    android:id="@+id/ct_all_hot"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:text="最热"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/h4" />
            </RelativeLayout>

            <View
                android:id="@+id/hot_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_line"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:id="@+id/rl_recommend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height" >

                <ImageView
                    android:id="@+id/iv_icon_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_recommend" />

                <CheckedTextView
                    android:id="@+id/ct_recommend"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:text="推荐"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/h4" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>