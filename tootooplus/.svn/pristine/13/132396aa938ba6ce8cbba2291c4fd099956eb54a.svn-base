<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <include
        android:id="@+id/join_mem_top_layout"
        layout="@layout/two_or_one_btn_head" />

    <RelativeLayout
        android:id="@+id/rl_face_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/face_top"
        android:layout_below="@id/join_mem_top_layout"
        android:visibility="gone" >

        <CheckedTextView
            android:id="@+id/ct_num"
            style="@style/TvStyleDefault"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_title"
            android:text="@string/str_please_tell_other"
            android:textColor="@color/text_black"
            android:textSize="@dimen/notice_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ct_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/ct_enter_num"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_org_color"
                android:textSize="@dimen/super_large_text" />
        </LinearLayout>
    </RelativeLayout>

    <com.ninetowns.ui.widget.refreshable.RefreshableGridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/join_mem_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/groupchat_picture_heighth"
        android:layout_marginTop="@dimen/notice_top"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:horizontalSpacing="@dimen/activity_horizontal_margin"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:verticalSpacing="30dp" />

    <RelativeLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notice_face_refresh"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="#fff4e5" >

        <View
            style="@style/LineStyle"
            android:layout_alignParentTop="true"
            android:background="#f3dab1" />

        <CheckedTextView
            style="@style/TvStyleDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/notice_face"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/h5" />

        <View
            style="@style/LineStyle"
            android:layout_alignParentBottom="true"
            android:background="#f3dab1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/join_mem_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/join_mem_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/join_member_join_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/btn_org_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_mem_num_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/join_mem_bottom_height"
        android:layout_above="@id/join_mem_bottom_layout"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/join_member_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/btn_gray_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_youxianma"
        android:layout_width="match_parent"
        android:layout_height="@dimen/groupchat_picture_heighth"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />

            <com.ninetowns.ui.widget.text.MarqueeTextView
                android:id="@+id/ct_youxianma"
                style="@style/TvStyleDefault"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/btn_org_color"
                android:textSize="@dimen/h4" />

            <CheckedTextView
                style="@style/TvStyleDefault"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:text="@string/my_time"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />

            <com.ninetowns.ui.widget.text.MarqueeTextView
                android:id="@+id/ct_time"
                style="@style/TvStyleDefault"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />

            <CheckedTextView
                style="@style/TvStyleDefault"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:text="@string/my_adress"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />

            <com.ninetowns.ui.widget.text.MarqueeTextView
                android:id="@+id/ct_adress"
                style="@style/TvStyleDefault"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>