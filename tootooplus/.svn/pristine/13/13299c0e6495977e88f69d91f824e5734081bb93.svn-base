<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dragAndDrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/ic_create_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/create_wish_base_fragment_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/title_bar_height"
        android:layout_below="@id/ic_create_title" >

        <LinearLayout
            android:id="@+id/ll_dragGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <include 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/conver_view" />
            
            <com.ninetowns.ui.cooldraganddrop.CoolDragAndDropGridView
                android:id="@+id/coolDragAndDropGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                dragAndDrop:itemMargin="@dimen/button_drop_horizontal_margin"
                dragAndDrop:numColumns="2" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/ic_create_fotter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/create_wish_base_fragment_fotter" />

</RelativeLayout>