<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dragAndDrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/ic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/wish_detail_title" />

    <include
        android:id="@+id/fotter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fotter_tab_height"
        android:layout_alignParentBottom="true"
        layout="@layout/wish_detail_fotter" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fotter"
        android:layout_below="@id/ic_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/wish_detail_conver_view" />

            <com.ninetowns.ui.cooldraganddrop.CoolDragAndDropGridView
                android:id="@+id/coolDragAndDropGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                dragAndDrop:itemMargin="@dimen/button_drop_horizontal_margin"
                dragAndDrop:numColumns="2" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/photo_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fotter"
        android:visibility="gone" >
    </FrameLayout>

</RelativeLayout>