<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/view"
        style="@style/ListViewDriverStyle" >
    </View>

 

    <LinearLayout
        android:id="@+id/tab_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_below="@+id/view"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/ct_username"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:drawablePadding="@dimen/button_horizontal_margin"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h3" />

            <CheckedTextView
                android:id="@+id/ct_has_eate"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:drawableLeft="@drawable/icon_want_eat"
                android:drawablePadding="@dimen/button_horizontal_margin"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h3" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/rl_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_user"
        >
        <ImageView
        android:id="@+id/iv_wish_convert"
        android:layout_width="wrap_content"
        android:layout_height="213dp"
        android:scaleType="centerCrop" />
    <include layout="@layout/video_play_icon" />
        
    </RelativeLayout>
   
    <ImageView
        android:id="@+id/iv_wish_photo_stroke"
        android:layout_width="@dimen/photo_diment_stroke"
        android:layout_height="@dimen/photo_diment_stroke"
        android:layout_marginLeft="@dimen/photo_diment_stroke_maginlef"
        android:layout_marginTop="@dimen/photo_diment_stroke_magintop"
        android:src="@drawable/round_white" />

    <ImageView
        android:id="@+id/iv_wish_photo"
        android:layout_width="@dimen/photo_diment"
        android:layout_height="@dimen/photo_diment"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/photo_diment_stroke_magintop"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_default_photo" />

    <ImageView
        android:id="@+id/iv_wish_recommend_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/rl_convert"
        android:layout_alignTop="@id/rl_convert"
        android:scaleType="centerCrop"
        android:src="@drawable/ico_good" />

    <ImageView
        android:id="@+id/iv_del_or_edi_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_convert"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/rl_convert"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_marginBottom="@dimen/tab_height"
        android:src="@drawable/icon_del" />
<RelativeLayout
            android:id="@+id/rl_edi"
            android:layout_width="match_parent"
            style="@style/Act_Sto_Name_Style"
             android:layout_alignBottom="@id/rl_convert"
             >

            <CheckedTextView
                android:id="@+id/ct_story_name"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="好吃的苹果"
                android:textColor="@color/white"
                android:textSize="@dimen/h2" />

            <ImageView
                android:id="@+id/iv_del_or_edi_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/icon_edit" />
        </RelativeLayout>
   


        <RelativeLayout
            android:id="@+id/rl_storyid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height_activity"
            android:background="@color/white"
            android:layout_below="@id/rl_convert"
            android:visibility="invisible" >

            <CheckedTextView
                android:id="@+id/ct_storyid"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h3" />
        </RelativeLayout>

   

</RelativeLayout>