<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/app_bg_color"
android:orientation="vertical">
	
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@drawable/bg_title_shape_drawable"
    android:orientation="horizontal" >

        <LinearLayout
         android:id="@+id/two_or_one_btn_head_back"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_or_one_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_return_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/two_or_one_btn_head_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/h1" />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="@dimen/title_num_dimen"
                android:textColor="@color/red"
                android:text="@string/create_act_title_first" />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/h3"
                android:text="@string/create_act_title_total_step" />
            
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/create_act_first_step_submit_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_or_one_btn_head_second_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/two_or_one_btn_head_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    
	<ScrollView
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	        
	        <com.ninetowns.tootooplus.helper.ChangeItemView
	        android:id="@+id/create_act_first_step_change_item_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	        
	        <LinearLayout
	        android:id="@+id/create_act_first_step_add_store_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="@drawable/bg_create_act_add_store"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
	            
	            <TextView
	            android:id="@+id/create_act_first_step_add_store"
	            android:layout_width="100dp"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:gravity="center"
	            android:text="@string/create_act_first_step_add_store"/>
	        </LinearLayout>
	        
	        
	        
	        
	    </LinearLayout>
	</ScrollView>
</LinearLayout>