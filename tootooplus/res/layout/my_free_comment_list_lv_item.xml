<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:background="@color/app_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/remark_story_item_top_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_item_hight"
                android:orientation="horizontal"
                android:weightSum="5" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal" >

                    <!-- 空 -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        android:id="@+id/ct_user_name"
                        style="@style/TvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:drawableRight="@drawable/icon_vip_1"
                        android:text="张三"
                        android:textSize="@dimen/h4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckedTextView
                        android:id="@+id/ct_like"
                        style="@style/TvStyleDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_good"
                        android:drawablePadding="@dimen/button_horizontal_margin"
                        android:text="894514"
                        android:textSize="@dimen/h4" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_comment_convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/remark_story_item_top_layout"
                android:scaleType="fitXY"
                android:src="@drawable/default_photo_rect_large" />

            <ImageView
                android:id="@+id/iv_comment_photo"
                android:layout_width="@dimen/tab_item_hight"
                android:layout_height="@dimen/tab_item_hight"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_default_photo" />

            <ImageView
                android:id="@+id/iv_wish_recommend_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/tab_item_hight"
                android:scaleType="centerCrop"
                android:src="@drawable/ico_good" />

            <RelativeLayout
                style="@style/Act_Sto_Name_Style"
                android:layout_width="match_parent"
                android:layout_alignBottom="@id/iv_comment_convert"
                android:background="@drawable/background_black_small" >

                <TextView
                    android:id="@+id/tv_story_name"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="打发打发的萨菲大双份的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2" />

                <ImageView
                    android:id="@+id/iv_del_or_edi_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/icon_edit" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_del_or_edi_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_comment_convert"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/rl_convert"
                android:layout_marginBottom="@dimen/tab_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/icon_del" />

            <include layout="@layout/video_play_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark_story_recommd_buy_hint"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />

            <com.ninetowns.ui.widget.WrapRatingBar
                android:id="@+id/rb_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_act_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtab_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/ct_activityname"
                style="@style/TvStyleDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_black"
                android:textSize="@dimen/h4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>