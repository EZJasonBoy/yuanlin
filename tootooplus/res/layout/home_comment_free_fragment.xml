<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_in"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:orientation="horizontal"
            android:weightSum="100" >

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"
                android:gravity="center_vertical|left"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibtn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:src="@drawable/goodsgreed" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_middle"
                style="@style/SearchBgStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="68"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckedTextView
                    android:id="@+id/ct_wish_search"
                    style="@style/SearchTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" >

                <ImageButton
                    android:id="@+id/ibtn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/icon_comment_write" />

                <TextView
                    android:id="@+id/tv_no_write_count"
                    style="@style/TvStyleDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/round_red_backgroud"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h5"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/LineStyle" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/rl_free_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>