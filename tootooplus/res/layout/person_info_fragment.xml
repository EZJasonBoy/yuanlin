<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        	<include layout="@layout/per_home_lv_head_top" />

        	<TextView
            android:id="@+id/person_info_tv_modifypwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_arrow"
            android:padding="20dp"
            android:textColor="@color/title_textcolor"
            android:visibility="gone"
            android:text="@string/modify_pwd" />

        	<include layout="@layout/include_gray_margin" />

        	<TextView
            android:id="@+id/person_info_tv_levelcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/title_textcolor"
            android:text="@string/levelcount" />

        	<com.ninetowns.tootooplus.photoview.PerInfoVipView
            android:id="@+id/person_info_vip_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white" />
        
         	<TextView
            android:id="@+id/person_info_tv_distancetouplevel"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/title_textcolor"
            android:padding="8dp"
            android:text="@string/distancetouplevel" />

        	<include layout="@layout/include_gray_margin" />

        	<com.ninetowns.ui.widget.LinearLayoutExpandListView
            android:id="@+id/person_info_llexpandlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
    	</LinearLayout>
    	
        <LinearLayout
        android:id="@+id/per_info_all_trans_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/join_black_trans"
        android:visibility="gone"
        android:orientation="vertical">
            
        </LinearLayout>
        
    </RelativeLayout>
</ScrollView>