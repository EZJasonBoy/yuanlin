<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/noticeitem_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="9dp"
        android:text="notice content"
        android:textSize="@dimen/h3" />

    <TextView
        android:id="@+id/noticeitem_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/noticeitem_tv_content"
        android:layout_marginTop="5dp"
        android:text="notice time"
        android:textColor="@color/btn_gray_color"
        android:textSize="@dimen/h5" />

</RelativeLayout>