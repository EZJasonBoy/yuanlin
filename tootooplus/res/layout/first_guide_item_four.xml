<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_guide_four"
android:orientation="vertical">

    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_alignParentBottom="true"
	android:background="@drawable/bg_first_guide_transparent">
	    
	</LinearLayout>
    <LinearLayout
    android:layout_marginBottom="@dimen/guide_text_margin_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    
	    <TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:textSize="@dimen/first_guide_title_size"
	    android:text="@string/first_guide_item_four_title"
	    android:textColor="@color/white" />
	
	    <TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:textSize="@dimen/first_guide_content_size"
	    android:text="@string/first_guide_item_four_content"
	    android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
