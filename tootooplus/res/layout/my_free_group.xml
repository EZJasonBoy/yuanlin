<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/app_bg_color"
android:orientation="vertical">
    <include 
    layout="@layout/two_or_one_btn_head"/>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_item_hight"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="@color/app_bg_color"
    android:gravity="center_horizontal">
    	<RelativeLayout
    	android:id="@+id/free_group_not_enter_layout"
    	android:layout_width="0dp"
    	android:layout_weight="1"
    	android:layout_height="match_parent">
    	    <TextView
	        android:id="@+id/free_group_not_enter_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:textColor="@color/btn_gray_color"
	        android:text="@string/free_group_not_enter"/>
    	    
    	    <View
    	    android:id="@+id/free_group_not_enter_line"
    	    android:layout_width="match_parent"
    	    android:layout_height="1.5dp"
    	    android:layout_alignParentBottom="true"
    	    android:background="@color/btn_org_color"/>
    	</RelativeLayout>
        
        <RelativeLayout
    	android:id="@+id/free_group_enter_layout"
    	android:layout_width="0dp"
    	android:layout_weight="1"
    	android:layout_height="match_parent">
    	    
            <TextView
	        android:id="@+id/free_group_enter_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:textColor="@color/btn_gray_color"
	        android:text="@string/free_group_enter"/>
            
            <View
            android:id="@+id/free_group_enter_line"
    	    android:layout_width="match_parent"
    	    android:layout_height="1.5dp"
    	    android:layout_alignParentBottom="true"
    	    android:background="@color/btn_org_color"/>
    	</RelativeLayout>
        
        <RelativeLayout
    	android:id="@+id/free_group_select_layout"
    	android:layout_width="0dp"
    	android:layout_weight="1"
    	android:layout_height="match_parent">
            <TextView
	        android:id="@+id/free_group_select_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:textColor="@color/btn_gray_color"
	        android:text="@string/free_group_select"/>
            
            <View
            android:id="@+id/free_group_select_line"
    	    android:layout_width="match_parent"
    	    android:layout_height="1.5dp"
    	    android:layout_alignParentBottom="true"
    	    android:background="@color/btn_org_color"/>
        </RelativeLayout>
        
    </LinearLayout>
	<android.support.v4.view.ViewPager
   	android:id="@+id/free_group_viewPager"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"/>
    
</LinearLayout>
