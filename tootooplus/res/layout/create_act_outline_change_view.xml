<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <LinearLayout
  	android:layout_width="match_parent"
  	android:layout_height="@dimen/tab_item_hight"
  	android:weightSum="7"
  	android:orientation="horizontal">
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="2"
   	    android:gravity="center"
   	    android:orientation="horizontal">
   	        <TextView
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/create_act_active_time"/>
   	        
   	    </LinearLayout>
    	    
    	    
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="4"
   	    android:gravity="center_vertical"
   	    android:paddingLeft="5dp"
   	    android:orientation="horizontal">
   	        <TextView
   	        android:id="@+id/create_act_outline_change_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_act_frist_step_story_height"
            android:background="@drawable/bg_app_color_corners_shape_drawable"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:hint="@string/start_time_hint"
            android:textSize="@dimen/h4"/>
   	        
   	        
   	    </LinearLayout>
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="1"
   	    android:gravity="center_vertical"
   	    android:orientation="horizontal">
   	        
   	        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:text="@string/create_act_third_arrive"/>
   	    </LinearLayout>
   	</LinearLayout>
       
    <LinearLayout
   	android:layout_width="match_parent"
   	android:layout_height="@dimen/tab_item_hight"
   	android:weightSum="7"
   	android:orientation="horizontal">
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="2"
   	    android:gravity="center"
   	    android:orientation="horizontal">
   	        <!-- 空 -->
   	    </LinearLayout>
   	    
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="4"
   	    android:gravity="center_vertical"
   	    android:paddingLeft="5dp"
   	    android:orientation="horizontal">
   	        <TextView
   	        android:id="@+id/create_act_outline_change_end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_act_frist_step_story_height"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="@string/end_time_hint"
            android:paddingLeft="5dp"
            android:textSize="@dimen/h4"
            android:background="@drawable/bg_app_color_corners_shape_drawable"/>
   	        
   	    </LinearLayout>
   	    
   	</LinearLayout>
    
    
    <LinearLayout
   	android:layout_width="match_parent"
   	android:layout_height="@dimen/tab_item_hight"
   	android:weightSum="7"
   	android:orientation="horizontal">
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="2"
   	    android:gravity="center"
   	    android:orientation="horizontal">
   	        <TextView
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/create_act_active_address"/>
   	        
   	    </LinearLayout>
   	    
   	    
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="4"
   	    android:gravity="center_vertical"
   	    android:paddingLeft="5dp"
   	    android:orientation="horizontal">
   	        <EditText
   	        android:id="@+id/create_act_outline_change_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_act_frist_step_story_height"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:textSize="@dimen/h4"
            android:background="@drawable/bg_app_color_corners_shape_drawable"/>
   	        
   	        
   	    </LinearLayout>
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="1"
   	    android:gravity="center_vertical"
   	    android:orientation="horizontal">
   	        
   	        <TextView
   	        android:id="@+id/create_act_outline_change_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:text="搜索"/>
   	        
   	    </LinearLayout>
   	    
   	</LinearLayout>
    		
    <LinearLayout
   	android:layout_width="match_parent"
   	android:layout_height="200dp"
   	android:orientation="horizontal">
   	    
   	        
   	        
  	    <com.baidu.mapapi.map.MapView
        android:id="@+id/create_act_outline_change_bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true" />
   	    
   	</LinearLayout>
    
    <LinearLayout
   	android:layout_width="match_parent"
   	android:layout_height="@dimen/tab_item_hight"
   	android:weightSum="7"
   	android:orientation="horizontal">
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="2"
   	    android:gravity="center"
   	    android:orientation="horizontal">
   	        <TextView
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/create_act_store_name"/>
   	        
   	    </LinearLayout>
   	    
   	    <LinearLayout
   	    android:layout_width="0dp"
   	    android:layout_height="match_parent"
   	    android:layout_weight="4"
   	    android:gravity="center_vertical"
   	    android:paddingLeft="5dp"
   	    android:orientation="horizontal">
   	       <EditText
   	       android:id="@+id/create_act_outline_change_store_name"
           android:layout_width="match_parent"
           android:layout_height="@dimen/create_act_frist_step_story_height"
           android:singleLine="true"
           android:paddingLeft="5dp"
           android:textSize="@dimen/h4"
           android:background="@drawable/bg_app_color_corners_shape_drawable"/>
   	        
   	    </LinearLayout>
   	    
   	</LinearLayout>

</LinearLayout>
