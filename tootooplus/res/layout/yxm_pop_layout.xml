<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/join_black_trans"
android:gravity="center"
android:orientation="vertical">
    
    <LinearLayout
    android:id="@+id/yxm_pop_all_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_color_corners_shape_drawable"
    android:orientation="vertical">
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yxm_pop_title"
            android:textSize="@dimen/h2"
            android:textColor="@color/black"/>
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
            <LinearLayout
            android:id="@+id/use_yxm_pop_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
                <CheckBox
	            android:id="@+id/use_yxm_pop_cb"
	            style="@style/refund_checkbox_style"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:clickable="false"/>
	            
	            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:text="@string/use_yxm_pop"
	            android:textSize="@dimen/h2"
	            android:textColor="@color/black"/>
            </LinearLayout>
            
            
            <EditText
            android:id="@+id/use_yxm_pop_et"
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_height="@dimen/create_act_frist_step_story_height"
			android:background="@drawable/bg_yxm_corners_shape_drawable"
            android:singleLine="true"
            android:textSize="@dimen/h2"
            android:textColor="@color/black"
            />
            
        </LinearLayout>
        <LinearLayout
        android:id="@+id/unuse_yxm_pop_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
            <CheckBox
            android:id="@+id/unuse_yxm_pop_cb"
            style="@style/refund_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"/>
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/h2"
            android:text="@string/unuse_yxm_pop"
            android:textColor="@color/black"/>
            
        </LinearLayout>
        
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_hor_line"/>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center">
            <LinearLayout
            android:id="@+id/yxm_pop_submit_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                 <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/h2"
	            android:text="@string/change_pwd_submit"
	            android:textColor="@color/black"/>
            </LinearLayout>
            <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/title_hor_line"/>
           <LinearLayout
            android:id="@+id/yxm_pop_cancel_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
                 <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/h2"
	            android:text="@string/rainbo_cancel"
	            android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
