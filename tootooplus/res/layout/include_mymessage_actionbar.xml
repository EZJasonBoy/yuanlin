<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/frame_padding_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mymessage_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/btn_return_gray" >
        </ImageView>

        <LinearLayout
            android:id="@+id/rg_main_category"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:weightSum="3" >

            <RelativeLayout
                android:id="@+id/rl_mymsg_privateletter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/rb_mymsg_privateletter"
                    style="@style/mymsg_titlebar_btn_style"
                    android:background="@drawable/mymessage_tab_bg"
                    android:text="私信" />

                <!-- <ImageView
                    android:id="@+id/iv_mymsg_privateletter_reddot"
                    style="@style/main_points_style" /> -->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mymsg_notice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/rb_mymsg_notice"
                    style="@style/mymsg_titlebar_btn_style"
                    android:background="@drawable/mymessage_tab_bg"
                    android:text="通知" />
<!-- 
                <ImageView
                    android:id="@+id/iv_mymsg_notice_reddot"
                    style="@style/main_points_style" /> -->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mymsg_msg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/rb_mymsg_msg"
                    style="@style/mymsg_titlebar_btn_style"
                    android:background="@drawable/mymessage_tab_bg"
                    android:text="消息" />

               <!--  <ImageView
                    android:id="@+id/iv_mymsg_msg_reddot"
                    style="@style/main_points_style" /> -->
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mymessage_clearall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/mymessage_icon_clearall" >
        </ImageView>
    </LinearLayout>

</merge>