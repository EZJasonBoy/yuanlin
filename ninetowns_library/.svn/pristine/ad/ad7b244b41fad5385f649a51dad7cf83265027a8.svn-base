package com.ninetowns.library.util;


import android.util.Log;
/**
 * 
* @Title: LogUtil.java  
* @Description:处理日志
* @author wuyulong
* @date 2014-7-14 下午1:48:23  
* @version V1.0
 */
public class LogUtil {


	public static void error(String tag, String msg) {
				Log.e(new StringBuilder().append(tag)
						.append(">>>>>>>>>>>").toString(), msg);
	
	}

	public static void warn(String tag, String msg) {
				Log.w(new StringBuilder().append(tag)
						.append(">>>>>>>>>>>").toString(), msg);
	
	}

	public static void info(String tag, String msg) {
			Log.i(new StringBuilder().append(tag)
					.append(">>>>>>>>>>>").toString(), msg);	
			
	}

	public static void debug(String tag, String msg) {
			Log.d(new StringBuilder().append(tag)
					.append(">>>>>>>>>>>").toString(), msg);
		
	}

	public static void verbose(String tag, String msg) {
			Log.v(new StringBuilder().append(tag)
					.append(">>>>>>>>>>>").toString(), msg);
		
	}
	public static void systemlogInfo(String tag, Object msg) {
			System.out.println(new StringBuilder().append(tag)
					.append(">>>>>>>>>>>").toString()+msg);
	}
	
	public static void systemlogError(String tag, String msg) {
			System.err.println(new StringBuilder().append(tag)
					.append(">>>>>>>>>>>").toString()+msg);
	
}
}
